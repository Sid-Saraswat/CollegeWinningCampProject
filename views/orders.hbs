                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="abouttitle">
                        <h2>Orders</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Orders -->
    <div class="container">
        {{#if OD}}
        {{#each OD}}
        <div class="card m-5">
            <div class="title">Purchase Reciept</div>
            <div class="info">
                <div class="row">
                    <div class="col-7"> <span id="heading">Date</span><br> <span id="details">{{this.date}}</span>
                    </div>
                    <div class="col-5 pull-right"> <span id="heading">Order No.</span><br> <span
                            id="details">{{this._id}}</span> </div>
                </div>
            </div>
            <div class="pricing">
                <div class="row">
                    {{#each this.order}}
                    {{#each this.itemIds}}
                    <div class="col-9"> <span id="name">{{this.title}}</span> </div>
                    <div class="col-3"> <span id="price">${{this.price}}</span> </div>
                    {{/each}}
                    {{/each}}
                    <div class="col-9"> <span id="name">Shipping and handling</span> </div>
                    <div class="col-3"> <span id="price">$10</span> </div>
                    <div class="col-9"> <span id="name">Tax</span> </div>
                    <div class="col-3"> <span id="price">$5</span> </div>
                </div>
            </div>
            <div class="total">
                <div class="row">
                    <div class="col-9">Total</div>
                    <div class="col-3"><big>${{this.total}}</big></div>
                </div>
            </div>
            <div class="tracking">
                <div class="title">Tracking Order</div>
            </div>
            <div class="progress-track">
                <ul id="progressbar">
                    <li class="step0 active " id="step1">Ordered</li>
                    <li class="step0 active text-center" id="step2">Shipped</li>
                    <li class="step0 active text-right" id="step3">On the way</li>
                    <li class="step0 text-right" id="step4">Delivered</li>
                </ul>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="container d-flex justify-content-center align-items-center" style="height: 40vh;">
            <h1 style="font-size: 4rem;">{{Nothing}}</h1>
        </div>
        {{/if}}
    </div>
